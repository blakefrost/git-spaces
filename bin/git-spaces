#!/usr/bin/env sh

if test "$1" = "init"; then
  test -d .spaces && echo "Spaces already intialized" && exit 1
  test ! -d .git && echo "fatal: Not the root of a git repository" && exit 1
  mkdir master # Use a tmp directory name, this will fail if mster exists
  for i in `ls -A .`; do
    if [ $i != "master" ]; then
      mv $i master/$i;
    fi;
  done;
  mkdir .spaces
  cd master/.git
  # Move everthing except
  for i in `ls -A | grep -v 'HEAD\|COMMIT_EDITMSG\|logs\|index'`; do
    mv $i ../../.spaces/$i
    ln -sf ../../.spaces/$i $i
  done
elif test "$1" = "create"; then
  # Create a new space
  # Check for space
  SPACE=$2
  test ! -d .spaces && echo "fatal: Must be in the root with spaces initalized" && exit 1
  test -d $SPACE && echo "Space $SPACE already exists" && exit 1
  mkdir $SPACE
  cd $SPACE
  git init
  cd .git
  for i in branches config hooks info objects refs packed-refs ; do
    rm -rf $i
    ln -sf ../../.spaces/$i $i
  done
  cd ..
  git reset --hard
else
  man git-spaces
fi